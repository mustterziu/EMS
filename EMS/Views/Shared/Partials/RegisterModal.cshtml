@model EMS.Models.Employee
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<!-- Modal -->
<div class="modal fade" id="regjistroModal" tabindex="-1" role="dialog" aria-labelledby="regjistroModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="regjistroModalTitle">Kujdes!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Ju lutem afroni kartelen ne RFID Scanner!
                <div class="collapse" id="collapseExample">
                    <form method="post" action="/regjistro">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="FirstName">Emri</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="Filan">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="LastName">Mbiemri</label>
                                <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Fisteku">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="PhoneNumber">Numri Telefonit</label>
                                <input asp-for="PhoneNumber" type="number" class="form-control" id="phoneNumber" placeholder="+383 (0) 44 xxx xxx">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputGender">Gjinia</label>
                                <select asp-for="Gender" id="gender" class="form-control">
                                    <option selected value="">Zgjidh...</option>
                                    <option value="m">Mashkull</option>
                                    <option value="f">Femer</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="City">Qyteti</label>
                                <input asp-for="City" type="text" class="form-control" id="inputCity" placeholder="Prizren">
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputState">Shteti</label>
                                <select asp-for="State" id="state" class="form-control">
                                    <option selected value="">Zgjidh...</option>
                                    <option value="ks">Kosove</option>
                                    <option value="al">Shqiperi</option>
                                    <option value="mne">Mali i Zi</option>
                                    <option value="mk">Maqedoni</option>
                                </select>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label asp-for="Position">Pozita</label>
                                <input asp-for="Position" type="text" class="form-control" id="position" placeholder="Menaxher">
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputSchedule">Orari</label>
                                <select asp-for="Schedule" id="schedule" class="form-control">
                                    <option selected value="">Zgjidh...</option>
                                    <option value="firstShift">Paradite</option>
                                    <option value="secondShift">Masdite</option>
                                </select>
                                <span asp-validation-for="Schedule" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="PaymentPerHour">Pagesa per ore</label>
                                <input asp-for="PaymentPerHour" type="text" class="form-control" id="paymentperHour" placeholder="1.5">
                                <span asp-validation-for="PaymentPerHour" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Gjenero</button>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Mbyll</button>
                <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">Vazhdo</button>
            </div>
        </div>
    </div>
</div>
