@model EMS.Models.Employee
@{
    ViewData["Title"] = "showEmployee";
    //var employee = (Employee) ViewData["employee"];
    bool updated = (bool)ViewData["updated"];
    ViewBag.Active = "Kontrollo";
}

@if(updated){
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Sukses!</h4>
        <p>Te dhenat u ruajten me sukses</p>
        <hr>
        <p class="mb-0"><a asp-controller="Home" asp-action="Index">Kliko ketu</a> per tu kthyer ne kryefaqe</p>
    </div>
}

<form method="post" asp-controller="Employee" asp-action="Update">
    <input type="hidden" asp-for="Id" value="@Model.Id">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="PersonalNumber">Numri Personal</label>
            <input asp-for="PersonalNumber" type="number" class="form-control" placeholder="123xxxxxxxx" value="@Model.PersonalNumber">
            <span asp-validation-for="PersonalNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="FirstName">Emri</label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Filan" value="@Model.FirstName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="LastName">Mbiemri</label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Fisteku" value="@Model.LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Birthday">Ditelindja</label>
            <input asp-for="Birthday" type="date" class="form-control" value="@Model.Birthday.ToString("yyyy-MM-dd")">
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" value="@Model.Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber">Numri Telefonit</label>
            <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="+383 (0) 44 xxx xxx" value="@Model.PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label for="inputGender">Gjinia</label>
            <select asp-for="Gender" class="form-control" value="@Model.Gender">
                <option selected value="">Zgjidh...</option>
                <option value="m">Mashkull</option>
                <option value="f">Femer</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Banka">Banka</label>
            <select asp-for="Banka" id="banka" class="form-control" value="@Model.Banka">
                <option selected value="">Zgjidh...</option>
                <option value="Teb">TEB</option>
                <option value="Bkt">BKT</option>
                <option value="Bpb">BPB</option>
                <option value="Raiffeisen">Raiffeisen</option>
                <option value="BankaEkonomike">BankaEkonomike</option>
                <option value="ProCredit">ProCredit</option>
            </select>
            <span asp-validation-for="Banka" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NrBankes">Numri i Gjirollogarise</label>
            <input asp-for="NrBankes" type="number" class="form-control" placeholder="xxxxxxxxxxxxxxxxxx" value="@Model.NrBankes">
            <span asp-validation-for="NrBankes" class="text-danger"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="City">Qyteti</label>
            <input asp-for="City" type="text" class="form-control" placeholder="Prizren" value="@Model.City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">Shteti</label>
            <select asp-for="State" class="form-control" value="@Model.State">
                <option selected value="">Zgjidh...</option>
                <option value="Kosove">Kosove</option>
                <option value="Shqiperi">Shqiperi</option>
                <option value="Mali i Zi">Mali i Zi</option>
                <option value="Maqedoni">Maqedoni</option>
            </select>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Holiday">Pushimi</label>
            <select asp-for="Holiday" class="form-control" value="@Model.Holiday">
                <option value="E hene">E hene</option>
                <option value="E marte">E marte</option>
                <option value="E merkure">E merkure</option>
                <option value="E ejte">E ejte</option>
                <option value="E premte">E premte</option>
                <option value="E shtune">E shtune</option>
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label asp-for="Position">Pozita</label>
            <input asp-for="Position" type="text" class="form-control" placeholder="Menaxher" value="@Model.Position">
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label for="inputSchedule">Orari</label>
            <select asp-for="Schedule" class="form-control" value="@Model.Schedule">
                <option selected value="">Zgjidh...</option>
                <option value="Paradite">Paradite</option>
                <option value="Pasdite">Pasdite</option>
            </select>
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="PaymentPerHour">Pagesa per ore</label>
            <input asp-for="PaymentPerHour" type="text" class="form-control" placeholder="1.5" value="@Model.PaymentPerHour">
            <span asp-validation-for="PaymentPerHour" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Ruaj</button>
</form>