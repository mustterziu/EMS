@{
    ViewData["Title"] = "Active Employees";
    var employees = (List<Employee>)ViewData["employees"];
    //    bool registered = (bool)ViewData["registered"];
    ViewBag.Active = "Kryefaqja";
}

@if (TempData["registered"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Sukses!</strong> Te dhenat u ruajten.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}



<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Pozita</th>
            <th>Orari</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in employees)
        {
        <tr>
            <td>@emp.FirstName</td>
            <td>@emp.LastName</td>
            <td>@emp.Position</td>
            <td>@emp.Schedule</td>
            <td class="row pl-4">
                <div class="icon mr-2">
                    <a asp-controller="Employee" asp-action="ChangeOrari" asp-route-id="@emp.Id" class="btn btn-primary" alt="Kontrollo">
                        Ndro Orarin
                    </a>
                </div>
            </td>
        </tr>
        }
</table>


<partial name="Partials/FshijModal" />

@section Scripts{
    <script>
$(document).ready(function() {
    $('#example').DataTable();
} );


    </script>
}
