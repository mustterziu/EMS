@model EMS.Models.Employee
@{
    ViewData["Title"] = "PagesatEperfunduar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Active = "Kontrollo";

}

<h1>Pagesat e perfunduar</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Data e fillimit</th>
            <th scope="col">Data e fundit</th>
            <th scope="col">Pagesa Neto</th>
            <th scope="col">Pagesa Bruto</th>
            <th scope="col">Action</th>
    </thead>
    <tbody>
        @foreach(Payment p in Model.Payments)
        {
            <tr>
                <td>@p.startDate.ToString("dd MMMM yyyy")</td>
                <td>@p.endDate.ToString("dd MMMM yyyy")</td>
                <td>@p.paymentNeto</td>

                <td>@p.paymentBruto</td>
                <td>
                        <a class="btn @(p.paid? "btn-primary": "btn-warning")" asp-controller="Payment" asp-action="Fatura" asp-route-id="@p.Id">
                            @(p.paid? "Shiko faturen": "Perfundo pagesen")
                        </a>                 
                <a class="btn btn-danger" asp-controller="Payment" asp-action="DeletePayment" asp-route-id="@p.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>