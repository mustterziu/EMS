
@{
    ViewData["Title"] = "ShowReports";
    var employees = (List<EmployeeRroga>)ViewData["employees"];
    double totalCost = 0;
}

<div class="row">
    <form class="form-check-inline" method="post" asp-controller="Employee" asp-action="ShowReports">
        <div class="form-group mr-5 ml-3">
            <label for="periudha">Zgjedh Periudhen</label>
            <select class="form-control" id="periudha" name="periudha">
                <option>Ditore</option>
                <option>Javore</option>
                <option>Mujore</option>
                <option>Vjetore</option>
            </select>
        </div>
        <div class="form-group mr-5">
            <label for="renditja">Zgjedh Renditjen</label>
            <select class="form-control" id="renditja" name="renditja">
                <option>Emri</option>
                <option>Mbiemri</option>
                <option>Pozita</option>
                <option>Pagesa</option>
            </select>
        </div>
        <div class="form-group mr-5">
            <label for="orderby">Rendit sipas</label>
            <select class="form-control" id="orderby" name="orderby">
                <option value="AZ">A-Z</option>
                <option value="ZA">Z-A</option>
            </select>
        </div>
        <div class="form-group mr-5">
            <label for="orderby">Shkarko Apo Shfaq</label>
            <select class="form-control" id="excel" name="excel">
                <option value="Po">Shkarko Ne Excel</option>
                <option value="Jo">Shfaq Ne Faqe</option>
            </select>
        </div>
        <div class="form-group mr-5">
            <button type="submit" class="btn btn-primary" style="margin-top: 28px;">
                Cakto
            </button>
        </div>
    </form>
</div>



<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Pozita</th>
            <th>Pagesa</th>
        </tr>
    </thead>
    <tbody>
        @if (employees != null)
        {
            @foreach (var emp in employees)
            {
                totalCost = totalCost + emp.Paga;
                <tr>
                    <td>@emp.FirstName</td>
                    <td>@emp.LastName</td>
                    <td>@emp.Position</td>
                    <td>@emp.Paga</td>
                </tr>

            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Total Shpenzimet @totalCost</td>
        </tr>
    </tfoot>
</table>


@section Scripts{
    <script>

        $(document).ready(function () {
            $('#example').DataTable();
        });


    </script>
}
