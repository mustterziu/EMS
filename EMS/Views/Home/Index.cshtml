@{
    ViewData["Title"] = "Home Page";
    var attendance = (List<Attendance>)ViewData["attendance"];
}



<div class="row">
    <div class="col-lg-4 col-6">
        <div class="small-box bg-gradient-info">
            <div class="inner">
                <h3>Orari</h3>
                <p>Ndrysho orarin per punetore</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <a asp-controller="Employee" asp-action="OrariEmployees" class="small-box-footer">
                Cakto Listen <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-6">
        <div class="small-box bg-gradient-success">
            <div class="inner">
                <h3>@ViewData["punetoretAktiv"]</h3>
                <p>Punetoret aktiv</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-plus"></i>
            </div>
            <a asp-controller="Employee" asp-action="ActiveEmployees" class="small-box-footer">
                Shfaq Listen <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>



    <div class="col-lg-4 col-6">
        <div class="small-box bg-gradient-warning">
            <div class="inner">
                <h3>@ViewData["nrPunetoreve"]</h3>
                <p>Te gjithe punetoret</p>
            </div>
            <div class="icon">
                <i class="fas fa-user"></i>
            </div>
            <a asp-controller="Employee" asp-action="Allemployees" class="small-box-footer">
                Shfaq Listen <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>






<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Ora e Fillmit</th>
            <th>Ora e Mbarimit</th>
            <th>Pozita</th>
            <th>Pagesa</th>
            <th>Operacionet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var atd in attendance)
        {
            <tr>
                <td>@atd.Emp.FirstName</td>
                <td>@atd.Emp.LastName</td>
                <td>@atd.StartTime</td>
                <td>@atd.EndTime</td>
                <td>@atd.Emp.Position</td>
                <td>@atd.Payment</td>
                <td class="row pl-4">
                    <div class="icon mr-2">
                        <a asp-controller="Employee" asp-action="Kontrollo" asp-route-id="@atd.Emp.Id" class="btn btn-primary" alt="Kontrollo">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
</table>


@section Scripts{
    <script>

        $(document).ready(function () {
            $('#example').DataTable();
        });


    </script>
}

